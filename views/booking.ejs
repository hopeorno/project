async function confirmBooking() {
    const fullName = document.getElementById('fullName').value;
    const email = document.getElementById('email').value;
    const phone = document.getElementById('phone').value;

    if (!fullName || !email || !phone) {
        showNotification('Please fill in all your information!', 'error');
        return;
    }

    // ÿ¨ŸÖÿπ ÿ®ŸäÿßŸÜÿßÿ™ ÿßŸÑÿ≠ÿ¨ÿ≤
    const bookingData = {
        activityName: eventData.name,
        bookingDate: selectedDate || 'TBA',
        numPeople: parseInt(document.getElementById('numPeople')?.value) || selectedSeats.length || 1,
        fullName,
        email,
        phone
    };

    // ÿ•ÿ∏Ÿáÿßÿ± ŸÖÿ§ÿ¥ÿ± ÿßŸÑÿ™ÿ≠ŸÖŸäŸÑ
    const confirmBtn = document.getElementById('confirmBtn');
    const originalText = confirmBtn.textContent;
    confirmBtn.disabled = true;
    confirmBtn.textContent = 'Saving...';

    try {
        // ÿ•ÿ±ÿ≥ÿßŸÑ ÿßŸÑÿ≠ÿ¨ÿ≤ ŸÑŸÑÿ≥Ÿäÿ±ŸÅÿ±
        const response = await fetch('/api/save-booking', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify(bookingData)
        });

        const data = await response.json();

        if (data.success) {
            // ŸÜÿ¨ÿ≠ ÿßŸÑÿ≠ÿ¨ÿ≤
            showNotification('‚úÖ Booking Confirmed Successfully!', 'success');
            
            // ÿ±ÿ≥ÿßŸÑÿ© ÿ™ÿ£ŸÉŸäÿØ
            setTimeout(() => {
                alert(`‚úÖ Booking Confirmed!\n\nEvent: ${bookingData.activityName}\nDate: ${bookingData.bookingDate}\nGuests: ${bookingData.numPeople}\n\nYou can view your bookings in your profile.`);
                
                // ÿ•ÿπÿßÿØÿ© ÿßŸÑÿ™Ÿàÿ¨ŸäŸá ŸÑŸÑÿ®ÿ±ŸàŸÅÿßŸäŸÑ
                window.location.href = '/profile';
            }, 500);
        } else {
            showNotification(data.message || 'Booking failed', 'error');
            confirmBtn.disabled = false;
            confirmBtn.textContent = originalText;
        }
    } catch (err) {
        console.error('Booking error:', err);
        showNotification('Connection error. Please try again.', 'error');
        confirmBtn.disabled = false;
        confirmBtn.textContent = originalText;
    }
}

